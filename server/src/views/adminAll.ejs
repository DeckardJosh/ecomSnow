

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../public/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Admin All Products</title>
</head>
<body>
    <div class="admin_all_container">
        <div class="admin_all_table">
            <div class="admin_table_header">
                <div class="admin_table_column">ID</div>
                <div class="admin_table_column">Name</div>
                <div class="admin_table_column">Brand</div>
                <div class="admin_table_column">Age</div>
                <div class="admin_table_column">Price</div>
                <div class="admin_table_column">
                    <span>Actions</span>
                    <a href="/admin/api/add" class="btn btn-success btn-sm ms-2">Add Product</a>
                </div>
            </div>
            <% allProducts.forEach((product) => { %>
            <div class="admin_table_content">

                <div class="admin_table_column"><%= product._id %></div>
                <div class="admin_table_column"><%= product.name %></div>
                <div class="admin_table_column"><%= product.brand %></div>
                <div class="admin_table_column"><%= product.age %></div>
                <div class="admin_table_column"><%= product.price %></div>
                <div class="admin_table_column">
                    <a href="/admin/edit/<%=product.id%>" class="btn btn-secondary btn-md me-3">Edit</a>
                    <a href="/admin/delete/<%=product.id%>" class="btn btn-danger btn-md">Delete</a>
                </div>

            </div>
            <% }) %>
                
        </div>
        <!-- <% allProducts.forEach((product) => { %>
            <p><%= product._id %></p>
        <% }) %> -->
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>